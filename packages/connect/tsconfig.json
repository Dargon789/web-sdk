{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@0xsequence/dapp-client": ["./node_modules/@0xsequence/dapp-client/dist/index.d.ts"]
    },
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "declaration": false,
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
